major_version: "local"
minor_version: ""
default_target_cpu: "darwin" # "androideabi-4.9"

# without this, we get "No toolchain found for cpu 'darwin'", even when --cpu=androideabi-4.9
default_toolchain {
  cpu: "darwin"
  toolchain_identifier: "arm-linux-androideabi-4.9"
}

default_toolchain {
  cpu: "androideabi-4.9"
  toolchain_identifier: "arm-linux-androideabi-4.9"
